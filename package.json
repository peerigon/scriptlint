{
  "name": "scriptlint",
  "version": "0.0.0-released-semantically",
  "description": "an enforcable script naming standard for package.json",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/peerigon/scriptlint",
  "author": "Peerigon GmbH",
  "license": "MIT",
  "bin": {
    "scriptlint": "./dist/cli.js"
  },
  "files": [
    "/dist",
    "/README.md"
  ],
  "scripts": {
    "build": "run-s build:clean build:scripts build:chmod",
    "build:chmod": "chmod +x ./dist/cli.js",
    "build:clean": "rimraf ./dist",
    "build:dev": "tsc -p tsconfig.build.json",
    "build:scripts": "tsc -p tsconfig.build.json",
    "dev": "run-s build other:watch",
    "format": "run-p test:self:fix test:lint:fix format:fix",
    "format:fix": "prettier --write tests/*.{ts,tsx} src/*.{ts,tsx}",
    "other:selfupdate": "updtr",
    "other:watch": "nodemon -e js,ts --watch src --exec 'run-p build:dev'",
    "prepublishOnly": "run-p build",
    "start": "node dist/index.js",
    "test": "run-s test:lint test:types test:unit test:self",
    "test:lint": "eslint ./src ./tests --ext js,ts,tsx",
    "test:lint:fix": "eslint ./src ./tests --ext js,ts,tsx --fix",
    "test:self": "scriptlint",
    "test:self:fix": "scriptlint --fix",
    "test:types": "tsc -p tsconfig.json --noEmit true",
    "test:unit": "jest --coverage",
    "test:update": "jest -u",
    "test:watch": "jest --watch --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-p format test",
      "pre-push": "run-p test"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx}": [
      "format",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/cosmiconfig": "^6.0.0",
    "@types/jest": "25.1.3",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "eslint": "6.8.0",
    "eslint-config-peerigon": "^27.1.3",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-prefer-arrow": "1.1.7",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "jest-mock-console": "^1.0.0",
    "lint-staged": "10.0.7",
    "nodemon": "2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "3.0.2",
    "scriptlint": "1.4.0",
    "ts-jest": "25.2.1",
    "typescript": "3.7.5",
    "updtr": "^3.1.0"
  },
  "dependencies": {
    "@types/node": "13.7.4",
    "chalk": "^3.0.0",
    "commander": "4.1.1",
    "cosmiconfig": "^6.0.0",
    "detect-indent": "^6.0.0"
  }
}